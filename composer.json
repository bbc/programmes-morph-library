{
    "name": "bbc/programmes-morph-library",
    "type": "library",
    "require": {
        "guzzlehttp/guzzle": "^6.0",
        "psr/log": "^1.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "phpstan/phpstan": "^0.9",
        "phpstan/phpstan-phpunit": "^0.9",
        "escapestudios/symfony2-coding-standard": "^3.0",
        "squizlabs/php_codesniffer": "^3.1"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "BBC\\ProgrammesMorphLibrary\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\BBC\\ProgrammesMorphLibrary\\": "tests/"
        }
    }
}
